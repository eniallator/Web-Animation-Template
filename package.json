{
  "author": "eniallator",
  "description": "Web art packages",
  "engines": {
    "node": ">=25.4.0"
  },
  "license": "MIT",
  "name": "@web-art/root",
  "packageManager": "yarn@4.12.0",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.3",
    "@stylistic/eslint-plugin": "^5.9.0",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "app": "yarn workspace @web-art/app",
    "prof": "yarn workspace @web-art/profile",
    "linalg": "yarn workspace @web-art/linear-algebra",
    "build": "yarn workspaces foreach -Avpt --exclude @web-art/root run build",
    "typecheck": "yarn workspaces foreach -Avpt --exclude @web-art/root run typecheck",
    "lint": "yarn workspaces foreach -Avpt --exclude @web-art/root run lint",
    "test": "vitest run --config vitest.config.js",
    "findissues": "yarn workspaces foreach -Avpt --exclude @web-art/root run findissues",
    "prepublish": "yarn workspaces foreach -Avpt --exclude @web-art/root run prepublish"
  }
}
