{
  "author": "eniallator",
  "description": "Web art packages",
  "engines": {
    "node": ">=24.8.0"
  },
  "license": "MIT",
  "name": "@web-art/root",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/eslint__js": "^9.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "scripts": {
    "app": "yarn workspace @web-art/app",
    "core": "yarn workspace @web-art/core",
    "prof": "yarn workspace @web-art/profile",
    "conf": "yarn workspace @web-art/config-parser",
    "linalg": "yarn workspace @web-art/linear-algebra",
    "build": "yarn workspaces foreach -Avpt --exclude @web-art/root run build",
    "typecheck": "yarn workspaces foreach -Avpt --exclude @web-art/root run typecheck",
    "lint": "yarn workspaces foreach -Avpt --exclude @web-art/root run lint",
    "test": "yarn workspaces foreach -Avpt --exclude @web-art/root run test",
    "findissues": "yarn workspaces foreach -Avpt --exclude @web-art/root run findissues",
    "prepublish": "yarn workspaces foreach -Avpt --exclude @web-art/root run prepublish"
  }
}
